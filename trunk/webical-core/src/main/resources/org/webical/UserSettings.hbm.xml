<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.webical" default-lazy="false">
	<joined-subclass name="UserSettings" table="user_settings" extends="Settings">

		<!-- The id column of the superclass -->
		<key column="settingsId"/>

		<property name="defaultCalendarView" type="java.lang.Integer"/>
		<property name="firstDayOfWeek" type="java.lang.Integer"/>
		<property name="numberOfAgendaDays" type="java.lang.Integer"/>

		<property name="dateFormat" type="java.lang.String"/>
		<property name="timeFormat" type="java.lang.String"/>

		<many-to-one name="user" class="User" column="userId"
			not-null="true" lazy="false" />

	</joined-subclass>
</hibernate-mapping>