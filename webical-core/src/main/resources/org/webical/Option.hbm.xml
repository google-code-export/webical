<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.webical" default-lazy="false">
	<class name="Option" table="options">

		<id name="optionId" type="java.lang.Long">
            <column name="optionId" />
            <generator class="identity" />
  		</id>

  		<property name="name" type="java.lang.String" />
  		<property name="value" type="serializable" />

  		<many-to-one name="settings" class="Settings" lazy="false"
  			column="settingsId" not-null="true" />

	</class>
</hibernate-mapping>